{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "headers": {
    "headers": [
      {
        "key": "Cross-Origin-Opener-Policy",
        "value": "same-origin"
      },
      {
        "key": "Cross-Origin-Embedder-Policy",
        "value": "require-corp"
      },
          {
            "key": "Cross-Origin-Resource-Policy",
            "value": "cross-origin"
          }
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
